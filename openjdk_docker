ğŸ§© 2. Pinpoint Docker Compose íŒŒì¼ ë‹¤ìš´ë¡œë“œ
â‘  ì„¤ì¹˜í•  ë””ë ‰í† ë¦¬ ìƒì„±
mkdir ~/pinpoint-docker
cd ~/pinpoint-docker

docker-compose.yml
---------------------------------------
version: "3.8"

networks:
  pinpoint-net:
    driver: bridge

volumes:
  zookeeper-data:
  hbase-data:
  kafka-data:
  mysql-data:
  pinot-data:

services:

  # ============================================================
  # 1. ZOOKEEPER
  # ============================================================
  pinpoint-zookeeper:
    image: zookeeper:3.8
    container_name: pinpoint-zookeeper
    restart: always
    ports:
      - "2181:2181"
    environment:
      ZOO_MY_ID: 1
      ZOO_SERVERS: server.1=0.0.0.0:2888:3888;2181
      ZOO_4LW_COMMANDS_WHITELIST: "*"
    volumes:
      - zookeeper-data:/data
    #- zookeeper-data:/datalog
    networks:
      - pinpoint-net
    healthcheck:
      test: ["CMD", "zkServer.sh", "status"]
      interval: 10s
      timeout: 5s
      retries: 5
      start_period: 30s
  # ============================================================
  # 2. HBASE
  # ============================================================
  pinpoint-hbase:
    image: pinpointdocker/pinpoint-hbase:3.0.0
    container_name: pinpoint-hbase
    restart: always
    hostname: zoo1
    environment:
      HBASE_MANAGES_ZK: "false"
      HBASE_ZOOKEEPER_QUORUM: pinpoint-zookeeper
      HBASE_ZOOKEEPER_PROPERTY_CLIENTPORT: 2181
      HBASE_MASTER_INFO_PORT: 16010
      HBASE_REGIONSERVER_INFO_PORT: 16030
    ports:
      - "16000:16000"  # HBase Master
      - "16010:16010"  # HBase Master Web UI
      - "16020:16020"  # HBase RegionServer
      - "16030:16030"  # HBase RegionServer Web UI
    volumes:
      - hbase-data:/home/pinpoint/hbase
      - hbase-data:/home/pinpoint/zookeeper
    networks:
      - pinpoint-net
    depends_on:
      pinpoint-zookeeper:
        condition: service_healthy
    healthcheck:
      test: ["CMD", "/bin/bash", "-c", "echo status | hbase shell -n | grep -q 'active master'"]
      interval: 30s
      timeout: 10s
      retries: 10
      start_period: 60s

  # ============================================================
  # 3. Kafka
  # ============================================================
  pinpoint-kafka:
    image: confluentinc/cp-kafka:7.6.1
    container_name: pinpoint-kafka
    restart: always
    ports:
      - "9092:9092"
    environment:
      KAFKA_BROKER_ID: 1
      KAFKA_ZOOKEEPER_CONNECT: pinpoint-zookeeper:2181
      KAFKA_ADVERTISED_LISTENERS: PLAINTEXT://pinpoint-kafka:9092
      KAFKA_LISTENERS: PLAINTEXT://0.0.0.0:9092
      KAFKA_OFFSETS_TOPIC_REPLICATION_FACTOR: 1
      KAFKA_AUTO_CREATE_TOPICS_ENABLE: "true"
      KAFKA_LOG_RETENTION_HOURS: 168
    volumes:
      - kafka-data:/var/lib/kafka/data
    networks:
      - pinpoint-net
    depends_on:
      pinpoint-zookeeper:
        condition: service_healthy
    healthcheck:
      test: ["CMD", "kafka-broker-api-versions", "--bootstrap-server", "localhost:9092"]
      interval: 10s
      timeout: 5s
      retries: 5

  # ============================================================
  # 4. Pinot (ìµœì‹  ë²„ì „ ì‚¬ìš© ê¶Œì¥)
  # ============================================================
  pinpoint-pinot-controller:
    image: apachepinot/pinot:1.2.0
    container_name: pinpoint-pinot-controller
    restart: always
    command: StartController -zkAddress pinpoint-zookeeper:2181
    ports:
      - "9000:9000"
    environment:
      JAVA_OPTS: "-Xms512m -Xmx1024m -XX:+UseG1GC"
    volumes:
      - pinot-data:/tmp/data
    networks:
      - pinpoint-net
    depends_on:
      pinpoint-zookeeper:
        condition: service_healthy
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:9000/health"]
      interval: 30s
      timeout: 10s
      retries: 5

  pinpoint-pinot-broker:
    image: apachepinot/pinot:1.2.0
    container_name: pinpoint-pinot-broker
    restart: always
    command: StartBroker -zkAddress pinpoint-zookeeper:2181
    ports:
      - "8099:8099"
    environment:
      JAVA_OPTS: "-Xms512m -Xmx1024m -XX:+UseG1GC"
    networks:
      - pinpoint-net
    depends_on:
      pinpoint-pinot-controller:
        condition: service_healthy

  pinpoint-pinot-server:
    image: apachepinot/pinot:1.2.0
    container_name: pinpoint-pinot-server
    restart: always
    command: StartServer -zkAddress pinpoint-zookeeper:2181
    ports:
      - "8098:8098"
    environment:
      JAVA_OPTS: "-Xms512m -Xmx1024m -XX:+UseG1GC"
    volumes:
      - pinot-data:/tmp/data
    networks:
      - pinpoint-net
    depends_on:
      - pinpoint-pinot-broker

  # ============================================================
  # 5. MySQL
  # ============================================================
  pinpoint-mysql:
    image: mysql:8.0
    container_name: pinpoint-mysql
    restart: always
    environment:
      MYSQL_ROOT_PASSWORD: root
      MYSQL_DATABASE: pinpoint
      MYSQL_USER: admin
      MYSQL_PASSWORD: admin
    ports:
      - "3306:3306"
    command:
      - --character-set-server=utf8mb4
      - --collation-server=utf8mb4_unicode_ci
      - --default-authentication-plugin=mysql_native_password
    volumes:
      - mysql-data:/var/lib/mysql
    networks:
      - pinpoint-net
    healthcheck:
      test: ["CMD", "mysqladmin", "ping", "-h", "localhost", "-uroot", "-proot"]
      interval: 10s
      timeout: 5s
      retries: 5

  # ============================================================
  # 6. Pinpoint Collector
  # ============================================================
  pinpoint-collector:
    image: pinpointdocker/pinpoint-collector:3.0.2
    container_name: pinpoint-collector
    restart: always
    environment:
      SPRING_PROFILES_ACTIVE: release
      
      # HBase ì„¤ì •
      HBASE_HOST: pinpoint-hbase
      HBASE_PORT: 2181
      
      # Kafka ì„¤ì •
      KAFKA_BOOTSTRAP_SERVERS: pinpoint-kafka:9092
      
      # Collector ì„¤ì •
      CLUSTER_ENABLE: "false"
      RECEIVER_GRPC_AGENT_PORT: 9991
      RECEIVER_GRPC_STAT_PORT: 9992
      RECEIVER_GRPC_SPAN_PORT: 9993
      
      # Pinot ì„¤ì • (ì„ íƒì‚¬í•­)
      PINOT_JDBC_URL: jdbc:pinot://pinpoint-pinot-broker:8099
      
      # ê¸°íƒ€ ì„¤ì •
      LOGGING_LEVEL_ROOT: INFO
      
    ports:
      - "9991:9991"  # agent
      - "9992:9992"  # stat
      - "9993:9993"  # span
      - "9994:9994"  # http agent
      - "9995:9995"  # http stat
      - "9996:9996"  # http span
    networks:
      - pinpoint-net
    depends_on:
      pinpoint-hbase:
        condition: service_healthy
      pinpoint-kafka:
        condition: service_healthy

  # ============================================================
  # 7. Pinpoint Web
  # ============================================================
  pinpoint-web:
    image: pinpointdocker/pinpoint-web:3.0.2
    container_name: pinpoint-web
    restart: always
    environment:
      SPRING_PROFILES_ACTIVE: release
      
      # HBase ì„¤ì •
      HBASE_HOST: pinpoint-hbase
      HBASE_PORT: 2181
      
      # í´ëŸ¬ìŠ¤í„° ì„¤ì •
      CLUSTER_ENABLE: "false"
      
      # MySQL ì„¤ì •
      SPRING_DATASOURCE_HIKARI_JDBCURL: jdbc:mysql://pinpoint-mysql:3306/pinpoint?characterEncoding=UTF-8&serverTimezone=UTC
      SPRING_DATASOURCE_HIKARI_USERNAME: admin
      SPRING_DATASOURCE_HIKARI_PASSWORD: admin
      
      # ê´€ë¦¬ì ì„¤ì •
      ADMIN_PASSWORD: admin
      
      # ê¸°íƒ€ ì„¤ì •
      LOGGING_LEVEL_ROOT: INFO
      CONFIG_SENDUSAGE: "false"
      
    ports:
      - "8080:8080"
      - "9997:9997"
    networks:
      - pinpoint-net
    depends_on:
      pinpoint-collector:
        condition: service_started
      pinpoint-mysql:
        condition: service_healthy

  # ============================================================
  # 8. Pinpoint Batch (Alarm)
  # ============================================================
  pinpoint-batch:
    image: pinpointdocker/pinpoint-batch:3.0.2
    container_name: pinpoint-batch
    restart: always
    environment:
      SPRING_PROFILES_ACTIVE: release,batch
      
      # HBase ì„¤ì •
      HBASE_HOST: pinpoint-hbase
      HBASE_PORT: 2181
      
      # MySQL ì„¤ì •
      SPRING_DATASOURCE_HIKARI_JDBCURL: jdbc:mysql://pinpoint-mysql:3306/pinpoint?characterEncoding=UTF-8&serverTimezone=UTC
      SPRING_DATASOURCE_HIKARI_USERNAME: admin
      SPRING_DATASOURCE_HIKARI_PASSWORD: admin
      
      # Batch ì„¤ì •
      BATCH_ENABLE: "true"
      BATCH_SERVER_IP: pinpoint-batch
      
      # ê¸°íƒ€ ì„¤ì •
      LOGGING_LEVEL_ROOT: INFO
      
    networks:
      - pinpoint-net
    depends_on:
      pinpoint-hbase:
        condition: service_healthy
      pinpoint-mysql:
        condition: service_healthy

  # ============================================================
  # 9. Pinpoint Flink (ì‹¤ì‹œê°„ ì²˜ë¦¬, ì„ íƒì‚¬í•­)
  # ============================================================
  # pinpoint-flink-jobmanager:
  #   image: pinpointdocker/pinpoint-flink:3.0.2
  #   container_name: pinpoint-flink-jobmanager
  #   restart: always
  #   command: jobmanager
  #   environment:
  #     SPRING_PROFILES_ACTIVE: release
